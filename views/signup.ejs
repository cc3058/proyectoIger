	<% include ./partials/head.ejs %>
	<title>Registro</title>

</head>
<body class="login">
	<div class="container">	
		<div class="card text-center mt-5">
			<div class="card-body">
				<h1>Registrarse</h1>
				<form method="POST">
					<div class="form-group">
						<label for = "email">Correo electronico</label>
						<input type="email" name='email' placeholder='Correo' class="form-control" required autofocus>
					</div>
					<div class="form-group">
						<label for="password">Contraseña</label>
						<input type="password" name='password' placeholder='Contraseña' class="form-control" required>
					</div>
					<div class="form-group">
						<label for="nickname">Usuario</label>
						<input type="text" name='nickname' placeholder='usuario' class="form-control" maxlength="25" required>
					</div>
					<div class="form-group">
						<label for="age">Edad</label>
						<input type="number" name='age' placeholder='edad' class="form-control" pattern="[1-9]?[0-9]" maxlength="2" min="0">
					</div>
					<div class="form-group">
						<label for="role">Role</label>
						<select name="role" id="role">
							<option value="member">Administrador</option>
							<option value="author">Estudiante</option>
							<option value="teacher">Encargado/maestro</option>
						</select>
					</div>
					<button type="submit" class="btn btn-outline-secondary btn-lg">Registrarme</button>
				</form>
				<hr>
				<h5>Ya tengo una cuenta <a href="/auth/login">Iniciar sesión</a></h5>
			</div>
		</div>
	</div>

	
	
</body>
</html>